<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomorLoginActivity">

    <TextView
        android:id="@+id/customorlog_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:text="IF don't have accunt.."
        android:textColor="#97041d"
        android:textSize="20dp" />

    <Button
        android:id="@+id/customorlog_btn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="189dp"
        android:text="Login"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/customor_status"
        android:layout_width="270dp"
        android:layout_height="82dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="Customor  Login"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="19dp" />

    <EditText
        android:id="@+id/customer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp"
        android:ems="10"
        android:hint="Email...."
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/customor_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="password..."
        android:inputType="textPassword" />

    <Button
        android:id="@+id/customorreg_btn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:text="Register"
        android:textSize="20dp" />

</RelativeLayout>